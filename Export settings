SELECT s.settingsid, s.enumname settingname, s.settingtypeid, t.settingtypename settingType, c.settingcategoryname, s.defaultvalue , COALESCE(SV.settingsvalue,OSV.settingsvalue,scsv.scrtygrpsttgsvalue) curValue, s.DescResourceKey description 
FROM centralservices.settings S left outer join CENTRALSERVICES.settingcategories C ON s.settingcategoryid=c.settingcategoryid left outer join CENTRALSERVICES.settingtypes T ON s.settingtypeid=t.settingtypeid left JOIN centralservices.settingsvalues SV ON SV.settingsid = S.settingsid AND S.settingtypeid = 0 left JOIN centralservices.organizationsettingsvalues OSV on osv.settingsid = S.settingsid AND S.settingtypeid = 1 left JOIN centralservices.scrtyGrpSttgsValues SCSV ON SCSV.settingsID = S.settingsID AND S.settingtypeid = 3 
WHERE (OSV.organizationid = 1 OR OSV.organizationid IS NULL) --AND S.settingtypeid IN (0,1) --AND S.settingtypeid >1 
ORDER BY S.enumname ;
